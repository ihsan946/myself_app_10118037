<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.ihsan946.fragment.menu.ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/glaucos"
        android:orientation="vertical"
        android:padding="@dimen/dimen10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen10"
            android:background="@drawable/border_layout3_profile"
            android:orientation="vertical">

            <com.prush.typedtextview.TypedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/tentang_nanti"
                android:gravity="center"
                android:hint="MY PROFILE"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:play_keystrokes_audio="false"
                app:typed_text="MY PROFILE" />

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/dimen10"
                android:src="@drawable/ic_photo_profile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/spring_garden"
                android:text="Nama : Muhammad Ihsan"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/spring_garden"
                android:text="Tempat Tanggal Lahir : Bandung, 23 Desember 1999"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/spring_garden"
                android:text="Tempat Tinggal Saat Ini : Lembang"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/spring_garden"
                android:text="Deskripsi Diri : "
                android:textColor="@color/black"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen30"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/spring_garden"
                android:text="Terlahir dari sebuah keluarga yang selalu mengajarkan apa itu kasih sayang dan apa itu menghargai membuat saya menjadi pribadi yang bertanggung jawab dan selalu berpikir panjang."
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/spring_garden"
                android:text="Quotes :"
                android:textColor="@color/black"
                android:textSize="21sp" />

            <com.prush.typedtextview.TypedTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen30"
                android:layout_marginBottom="@dimen/dimen10"
                android:fontFamily="@font/tentang_nanti"
                android:hint="Selagi hidup masih bisa bermanfaat, kenapa harus mengeluh? seharusnya bersyukur karna masih ada orang yang membutuhkanmu"
                android:textAlignment="center"
                android:textSize="21sp"
                android:textStyle="bold"
                app:play_keystrokes_audio="false"
                app:typed_text="Selagi hidup masih bisa bermanfaat, kenapa harus mengeluh? seharusnya bersyukur karna masih ada orang yang membutuhkanmu" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="3"
            android:background="@drawable/border_about"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/text1_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spring_garden"
                    android:text="CONTACT : "
                    android:textSize="21sp" />

                <Button
                    android:id="@+id/instagram_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1_contact"
                    android:layout_marginRight="@dimen/dimen5"
                    android:background="@drawable/border_button_contact"
                    android:fontFamily="@font/spring_garden"
                    android:text="Instagram" />

                <Button
                    android:id="@+id/email_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1_contact"
                    android:layout_marginRight="@dimen/dimen5"
                    android:layout_toRightOf="@id/instagram_contact"
                    android:background="@drawable/border_button_contact"
                    android:fontFamily="@font/spring_garden"
                    android:text="Email" />

                <Button
                    android:id="@+id/notelp_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1_contact"
                    android:layout_marginRight="@dimen/dimen5"
                    android:layout_toRightOf="@id/email_contact"
                    android:background="@drawable/border_button_contact"
                    android:fontFamily="@font/spring_garden"
                    android:text="Cellphone" />

                <Button
                    android:id="@+id/findme_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/text1_contact"
                    android:layout_marginRight="@dimen/dimen10"
                    android:layout_toRightOf="@id/notelp_contact"
                    android:background="@drawable/border_button_contact"
                    android:fontFamily="@font/spring_garden"
                    android:text="FIND ME" />

                <Button
                    android:id="@+id/about_contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notelp_contact"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/dimen10"
                    android:background="@drawable/border_button_contact"
                    android:fontFamily="@font/spring_garden"
                    android:text="About" />


            </RelativeLayout>


        </LinearLayout>


    </LinearLayout>

</FrameLayout>