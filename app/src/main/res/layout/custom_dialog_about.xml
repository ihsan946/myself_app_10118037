<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pewter_blue"
    android:orientation="vertical"
    android:padding="@dimen/dimen10">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tentang_nanti"
        android:gravity="center"
        android:text="ABOUT THIS APPS"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/logo" />

    <com.prush.typedtextview.TypedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/ds_digii"
        android:gravity="center"
        android:textSize="20sp"
        app:play_keystrokes_audio="false"
        app:typed_text="version : 1.0.5.2021" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/spring_garden"
        android:gravity="center"
        android:text="Aplikasi ini adalah aplikasi tentang biodata dari pembuat aplikasi"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btn_close_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@color/maximum_blue"
        android:fontFamily="@font/ds_digii"
        android:text="CLOSE"
        android:textColor="@color/black" />
</LinearLayout>